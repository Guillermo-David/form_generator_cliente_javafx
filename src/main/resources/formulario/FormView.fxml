<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.generador_informes.frontend.FormController"
      spacing="15" alignment="TOP_CENTER" style="-fx-padding: 20;">
    
    <!-- Logo -->
    <ImageView fitHeight="80" preserveRatio="true" smooth="true">
        <image>
            <Image url="@/img/logo.png"/>
        </image>
    </ImageView>

    <!-- Título -->
    <Label text="Formulario de Informe" 
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- Formulario -->
    <GridPane hgap="10" vgap="12">

        <columnConstraints>
            <!-- Etiquetas alineadas a la izquierda -->
            <ColumnConstraints minWidth="120" halignment="LEFT"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nombreField" promptText="Ingrese su nombre" 
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" promptText="Ingrese su email" 
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Tipo de Informe:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="tipoInformeBox" promptText="Seleccione un tipo"
                  GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Comentario:" GridPane.rowIndex="3" GridPane.columnIndex="0" 
               GridPane.valignment="TOP"/>
        <TextArea fx:id="comentarioArea" promptText="Escriba un comentario"
                  prefRowCount="4" wrapText="true"
                  GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Botón -->
    <HBox alignment="CENTER" spacing="10">
        <Button text="Enviar" onAction="#handleEnviar" 
                style="-fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>

</VBox>
